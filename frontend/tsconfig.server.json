{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "exclude": ["client", "node_modules"],
  "include": ["server/**/*.ts"]
} 